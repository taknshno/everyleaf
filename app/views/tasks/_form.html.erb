<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <a class="close" data-dismiss="alert" href="#">×</a>
      <h4 class="alert-heading"><%= @task.errors.count %>件のエラーがあります。</h4>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= f.label :task_name %>
    <%= f.text_field :task_name %>
  </div>
  <div class="task_detail">
    <%= f.label :task_detail %>
    <%= f.text_area :task_detail %>
  </div>
  <div class="task_status">
    <%= f.label :status %>
    <%= f.select :status, Task.statuses.keys, { include_blank: "選択する" }  %>
  </div>
  <div class="task_priority">
    <%= f.label :priority %>
    <%= f.select :priority, Task.priorities.keys, { include_blank: "選択する" } %>
  </div>
  <div class="task_end_date">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>
  <%= f.submit I18n.t('views.button.submit') %>
<% end %>
