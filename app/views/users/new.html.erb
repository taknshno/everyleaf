<div class="title_area">
  <h1>ユーザー登録</h1>
</div>
<div class="form_area">
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <a class="close" data-dismiss="alert" href="#">×</a>
      <h4 class="alert-heading"><%= @user.errors.count %>件のエラーがあります。</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form_input_area">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group mb-3 mx-auto">
        <%= f.text_field :user_name, placeholder:"名前", class:"form-control", required: true %>
      </div>
      <div class="form-group mb-3 mx-auto">
        <%= f.email_field :email, placeholder:"メールアドレス", class:"form-control", required: true %>
      </div>
      <div class="form-group mb-3 mx-auto">
        <%= f.password_field :password, placeholder:"パスワード", class:"form-control", required: true %>
      </div>
      <div class="form-group mb-3 mx-auto">
        <%= f.password_field :password_confirmation, placeholder:"パスワード(再確認)", class:"form-control", required: true %>
      </div>
      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :admin, {id:"flexCheckDefault"}, "あり", "なし" %>
          <%= f.label :admin, for: "flexCheckDefault", class:"form-check-label ml-1" %>
        </label>
      </div>
      <div class="button-wrapper">
        <%= link_to "戻る", admin_users_path, class: "btn btn-secondary btn-lg w-25 mr-3" %>
        <%= f.submit "登録する", class:"btn btn-primary btn-lg w-50" %>
      </div>
    <% end %>
  </div>
</div>
