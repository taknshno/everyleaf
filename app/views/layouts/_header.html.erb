<header class="header clearfix">
  <div class="top_menu clearfix">
    <ul>
      <% if logged_in? %>
        <li><%= link_to 'ホーム', tasks_path %></li>
        <li><%= link_to '新規タスク', new_task_path %></li>
        <li id="profile"><%= link_to 'プロフィール', user_path(current_user.id) %></li>
        <% if admin_user? %>
          <li><%= link_to '管理画面', admin_users_path %></li>
        <% end %>
        <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
      <% else %>
        <li><%= link_to "サインアップ", new_user_path %></li>
        <li><%= link_to "ログイン", new_session_path %></li>
      <% end %>
    </ul>
  </div>
</header>