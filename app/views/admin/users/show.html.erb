<div class="user-show">
  <div class="title_area">
    <h1>ユーザー情報</h1>
  </div>
  <div class="user_data_wrapper">
    <div class="user_data_area row justify-content-center">
      <ul class="mr-5">
        <li><strong>名前: </strong><%= @user.user_name %></li>
        <li><strong>メールアドレス: </strong><%= @user.email %></li>
      </ul>
      <ul>
        <li><strong>管理者権限: </strong><%= @user.admin %></li>
        <li><strong>タスク数: </strong><%= @user.tasks.count %> 件</li>
      </ul>
    </div>
    <div class="user_data_button row justify-content-center">
      <%= link_to I18n.t('views.button.edit'), edit_admin_user_path(@user.id), class: "btn btn-secondary btn-sm mr-5" %>
      <%= link_to I18n.t('views.button.user_delete'), user_path(@user.id), method: :delete,
                                                    class: "btn btn-danger btn-sm", data: { confirm: '本当に削除しますか？' } %>
    </div>
  </div>
</div>
<%= render 'tasks/task_list' %>
</div>
