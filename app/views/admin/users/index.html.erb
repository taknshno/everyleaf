<div class="title_area">
  <h1><%= I18n.t('views.messages.admin_page') %></h1>
</div>
<div class="admin_user_area">
  <div class="admin_control_bar">
    <%= link_to '管理権限でユーザー作成', new_admin_user_path %>
  </div>
  <table>
    <tr>
      <th>ID</th>
      <th><%= I18n.t("activerecord.attributes.user.user_name") %></th>
      <th><%= I18n.t("activerecord.attributes.user.email") %></th>
      <th>タスク数</th>
      <th><%= I18n.t("activerecord.attributes.user.admin") %></th>
      <th><%= I18n.t("views.messages.control") %></th>
    </tr>
    <% @users.each do |user| %>
      <tr class="admin_user_record">
        <td class="user_id"><%= user.id %></td>
        <% if user.id == current_user.id %>
          <td class="user_name text-left"><strong><%= user.user_name %></strong> (ログイン中)</td>
        <% else %>
          <td class="user_name text-left"><%= user.user_name %></td>
        <% end %>
        <td class="user_email text-left"><%= user.email %></td>
        <td class="user_tasks_count"><%= user.tasks.count %></td>
        <td class="user_admin"><%= user.admin %></td>
        <td class="show_button">
          <div class="control-wrapper">
            <ul>
              <li>
                <% if user.admin == "なし" %>
                  <%= link_to '権限付与', control_admin_user_path(user.id, act: "grant"), class: "btn btn-light btn-sm mb-0" %>
                <% else %>
                  <%= link_to '権限抹消', control_admin_user_path(user.id, act: "ensure"), class: "btn btn-light btn-sm mb-0" %>
                <% end %>
              </li>
              <li>
                <%= link_to I18n.t('views.button.show'), admin_user_path(user.id), class: "btn btn-light btn-sm mb-0" %>
              </li>
              <li>
                <%= link_to I18n.t('views.button.edit'), edit_admin_user_path(user.id), class: "btn btn-light btn-sm mb-0" %>
              </li>
              <li>
                <%= link_to I18n.t('views.button.delete'), admin_user_path(user.id), method: :delete, class: "btn btn-danger btn-sm mb-0", data: { confirm: '本当に削除しますか？' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @users %>
</div>
